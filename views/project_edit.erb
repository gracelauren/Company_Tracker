<h1>Update information for <%=@project.name() %>. You can either update one field or both.</h1>

<form action="/projects/<%= @project.id() %>" method="post">
  <input name="_method" type="hidden" value="patch">

  <label for="name">Rename your project:</label>
  <input id="name" name="name" type="text">

  <label for="description">Redescribe your project:</label>
  <input id="description" name="description" type="text">

  <button class='button btn-danger' type="submit">Update</button>
</form>
<br>
<br>
<form action="/projects/<%= @project.id() %>" method="post">
  <input name="_method" type="hidden" value="delete">
  <div class="span7 text-center">
    <button class= 'button btn-danger' type="submit">Delete <%=@project.name() %> from Database</button>
  </div>
</form>
